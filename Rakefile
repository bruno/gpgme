# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.spec("gpgme") do
  self.rubyforge_name = "ruby-gpgme"
  self.author = ['Daiki Ueno']
  self.email = 'ueno@unixuser.org'
  self.readme_file = "README"
  self.spec_extras = {
    "extensions" => ["extconf.rb"],
  }
  self.need_tar = false
  self.need_tar_gz = true
  self.source_prefix = 'ruby-'
end
